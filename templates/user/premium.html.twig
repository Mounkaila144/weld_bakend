{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('datatable') }}
    {% endblock %}
    <h1>User index</h1>
    <div class="card">
        <div class="card-body">
            <table id="scroll-horizontal" class="table nowrap align-middle card-li table-datatable" style="width:100%">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Adresse</th>
                    <th>ImageName</th>
                    <th>IsVerified</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.nom }}</td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.Adresse }}</td>
                        <td>{{ user.imageName }}</td>
                        <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                        <td>
                            <div class="dropdown d-inline-block">
                                <button class="btn btn-soft-secondary btn-sm dropdown" type="button"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="ri-more-fill align-middle"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a  href="{{ path('app_user_show', {'id': user.id}) }}" class="dropdown-item"><i
                                                    class="ri-eye-fill align-bottom me-2 text-muted"></i> View</a></li>
                                    <li><a href= href="{{ path('app_user_edit', {'id': user.id}) }}" class="dropdown-item edit-item-btn"><i
                                                    class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edit</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item remove-item-btn">
                                            <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <a href="{{ path('app_user_new') }}">Create new</a>

    {{ encore_entry_script_tags('datatable') }}

{% endblock %}
